generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String @id @default(uuid()) @db.Uuid
  fullname String
  handle   String
  email    String @unique
  password String
  exp      Int

  @@map("users")
}

model Chapter {
  id          String    @id @default(uuid()) @db.Uuid
  order       Int
  title       String
  description String
  imageLink   String
  sections    Section[]

  @@map("chapters")
}

model Section {
  id        Int        @id @default(autoincrement())
  level     Int
  chapterId String     @db.Uuid
  chapter   Chapter    @relation(fields: [chapterId], references: [id])
  questions Question[]

  @@map("sections")
}

model Question {
  id          Int      @id @default(autoincrement())
  sectionId   Int
  chapterId   String   @db.Uuid
  rightOption Int
  title       String
  description String
  question    String
  section     Section  @relation(fields: [sectionId], references: [id])
  options     Option[]

  @@map("questions")
}

model Option {
  id          Int      @id @default(autoincrement())
  questionId  Int
  optionValue String
  question    Question @relation(fields: [questionId], references: [id])

  @@map("options")
}
